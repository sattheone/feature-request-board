{
  "info": {
    "name": "Feature Request Board API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser2@example.com\",\n  \"name\": \"Test User 2\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Boards",
      "item": [
        {
          "name": "Get All Boards",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/boards",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "boards"]
            }
          }
        },
        {
          "name": "Create Board",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Board\",\n  \"description\": \"A test board for API testing\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/boards",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "boards"]
            }
          }
        }
      ]
    },
    {
      "name": "Feature Requests",
      "item": [
        {
          "name": "Get All Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/requests",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "requests"]
            }
          }
        },
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Add Dark Mode\",\n  \"description\": \"Please add a dark mode option to the application\",\n  \"category\": \"feature\",\n  \"boardId\": \"{{boardId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/requests",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "requests"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"This would be a great addition!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/requests/{{requestId}}/comments",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "requests", "{{requestId}}", "comments"]
            }
          }
        }
      ]
    },
    {
      "name": "Upvotes",
      "item": [
        {
          "name": "Add Upvote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/requests/{{requestId}}/upvotes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "requests", "{{requestId}}", "upvotes"]
            }
          }
        },
        {
          "name": "Remove Upvote",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/requests/{{requestId}}/upvotes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "requests", "{{requestId}}", "upvotes"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "your-jwt-token"
    },
    {
      "key": "boardId",
      "value": "your-board-id"
    },
    {
      "key": "requestId",
      "value": "your-request-id"
    }
  ]
} 